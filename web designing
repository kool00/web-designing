<script>
    const screen = document.getElementById("screen");

    function press(value) {
        if (screen.value === "Error") screen.value = "";

        const lastChar = screen.value.slice(-1);
        const operators = "+-*/";

        if (screen.value === "" && operators.includes(value)) return;
        if (operators.includes(value) && operators.includes(lastChar)) return;

        screen.value += value;
    }

    function clearScreen() {
        screen.value = "";
    }

    function backspace() {
        screen.value = screen.value.slice(0, -1);
    }

    function calculate() {
        try {
            if (!/^[0-9+\-*/. ]+$/.test(screen.value)) {
                screen.value = "Error";
                return;
            }
            if ("+-*/".includes(screen.value.slice(-1))) {
                screen.value = "Error";
                return;
            }
            screen.value = new Function("return " + screen.value)();
        } catch {
            screen.value = "Error";
        }
    }

    function updateTime() {
        const now = new Date();
        const options = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' };
        document.getElementById("time").innerHTML =
            now.toLocaleDateString(undefined, options) + "<br>" +
            now.toLocaleTimeString();
    }

    setInterval(updateTime, 1000);
    updateTime();

    document.addEventListener("keydown", (e) => {
        if ("0123456789+-*/.".includes(e.key)) press(e.key);
        else if (e.key === "Enter") calculate();
        else if (e.key === "Backspace") backspace();
    });
</script>

